<?php

namespace App\Model;

use Nette;
use App\Model;
use Nette\Database\Context;

class NpcManager extends Nette\Object{

	protected $db;

	const TABLE_NAME = 'helmet',
			COLUMN_HELMET = 'helmet_id',
			COLUMN_NAME = 'name',
			COLUMN_INFO = 'info',
			COLUMN_TYPE = 'type',
			COLUMN_AVATAR = 'avatar',
			COLUMN_STATE = 'state_id';

	public function __constructor(Context $db)
	{
		$this->db = $db;
	}

	public function getHelmets()
	{
		return $this->$db->table(self::TABLE_NAME)->order(self::COLUMN_HELMET)->fetchAll();
	}

	public function getHelmet($id)
	{
		return $this->$db->table(self::TABLE_NAME)->where(self::COLUMND_HELMET, $id)->fetch();
	}

	public function setHelmet($data)
	{
		return $this->$db->table(self::TABLE_NAME)->insert($data);
	}

	public function updateHelmet($data)
	{
		return $this->$db->table(self::TABLE_NAME)->where(self::COLUMN_HELMET, $data[self::COLUMN_HELMET])->update($data);
	}

	public function deleteHelmet($id) 
	{
		return $this->$db->table(self::TABLE_NAME)->where(self::COLUMND_HELMET, $id)->delete();
	}
}